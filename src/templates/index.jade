  title pipette


body
  nav.navbar.navbar-default
    .container-fluid
      .navbar-header
        a.navbar-brand(href='#') Pipette

  .container-fluid
    #textAreas.row
      .col-md-6
        .input-group
          textarea#inputtext.form-control(rows='10', cols='80', placeholder='input text')


      .col-md-6
        .input-group
          textarea#outputtext.form-control(rows='10', cols='80', placeholder='output text')

    // Command
    .row
      .col-md-3
        .column
          -
            commands = [1, 2, 3, 4, 5]
          each cmd in commands
            .portlet
              .portlet-header Header #{cmd}
              .portlet-content Content #{cmd}

    // Command debug
    .row
      .col-md-3
        .input-group
          input#commandtext.form-control(type='text', placeholder='command')
          span.input-group-btn
            button#clickme.btn.btn-default(type='button') Run!


